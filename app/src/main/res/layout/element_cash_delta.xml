<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rect_blue_rounded_8dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/view_dimen_normal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_dot"
            android:layout_width="@dimen/view_dimen_small"
            android:layout_height="@dimen/view_dimen_small"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/view_dimen_small"
            android:src="@drawable/indicator_dot_green" />

        <TextView
            android:id="@+id/tv_type"
            style="@style/ElementCashType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Доход" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/view_dimen_normal">

        <TextView
            android:id="@+id/tv_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/ElementCashAmount"
            tools:text="12 000 ₽" />

        <TextView
            android:id="@+id/tv_cash_limit"
            style="@style/ElementCashLimit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="/12 000 ₽" />
    </LinearLayout>

</LinearLayout>